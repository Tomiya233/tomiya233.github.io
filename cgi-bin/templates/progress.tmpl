<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <title>File Uploading</title>
    <meta http-equiv=content-type content="text/html; charset=iso-8859-1" >
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="CACHE-CONTROL" content="no-cache">
    <meta http-equiv="expires" content="-1">
    <META NAME="ROBOTS" CONTENT="NOINDEX">
    <script language="javascript" type="text/javascript">
    var get_data_speed = <!-- cgi:get_data_speed -->;
    var get_data_loop = true;
    var get_data_url = "<!-- cgi:get_data_url -->";
    var seconds = 0;
    var minutes = 0;
    var hours = 0;

    function stopGetProgressData(){ get_data_loop = false; }

    function getProgressData(){
    	var jsel = document.createElement('SCRIPT');

    	jsel.type = 'text/javascript';
    	jsel.src = get_data_url + "&dtime=" + Math.random();
    	document.body.appendChild(jsel);

    	if(get_data_loop){ self.setTimeout("getProgressData()", get_data_speed); }
    }

    function getElapsedTime(){
    	seconds += 1;

    	if(seconds == 60){
    		seconds = 0;
    		minutes += 1;
    	}

    	if(minutes == 60){
    		minutes = 0;
    		hours += 1;
    	}

    	var hr = "" + ((hours < 10) ? "0" : "") + hours;
    	var min = "" + ((minutes < 10) ? "0" : "") + minutes;
    	var sec = "" + ((seconds < 10) ? "0" : "") + seconds;

    	document.getElementById('time').innerHTML = hr + ":" + min + ":" + sec;

    	if(get_data_loop){ self.setTimeout("getElapsedTime()", 1000); }
    }

    function Message(msg){ document.getElementById('message').innerHTML = msg; }
    </script>
    <style>
      .data {background-color: #b3b3b3; border: 1px solid #898989; width: 90%}
      .data TR TD {background-color: #dddddd; font: 10px Arial;}
      .message {font: 10px Arial;}
      .bar1 {background-color:#C0C0C0; position:relative; text-align:left; height:15px; width:100%; border:1px solid #505050;}
      .bar2 {background-color:#FFFF00; position:relative; text-align:left; height:15px; width:0%;}
    </style>
  </head>
  <body style="background-color: #FFFFFF; color: #000000; font-family: arial, helvetica, sans_serif;">
    <div align="center"><font class="message" id="message"></font></div>
    <div align='center'>
    <center><table border=0 cellspacing=2 cellpadding=2 align=center width=500><tr>
    <td align=left width=20>
      <img src="../img/start.gif">
      </td><td align=center width=500>
      <div class="bar1" id="upload_status_wrap"><span style="font-size:9px;font-color:#000000;position:relative;float:right;z-index:1;" id="percent">0%</span>
        <div class="bar2" id="upload_status"></div>
	</div>
      </div>
      </td><td align=right=width=20><img src="../img/ziel.gif">
      </td></tr></table></center>
    </div>
    <div align="center">
      <table cellpadding=0 cellspacing=0 border=0 width=430>
        <tr>
          <td><b><font size=-2 color=#000000>Estimated Remaining Time:</b></td>
          <td align="right"><font color=#000000><div style="font-size:9px; font-color:#000000;"; id="remain">0</div></td>
        </tr>
        <tr>
          <td><b><font size=-2 color=#000000>Uploaded:</b></td>
          <td align="right"><font size=-2 color=#000000><font style="font-size:9px; font-color:#000000;"; id="current">0</font> <font size=-2 color=#000000>/ <!-- cgi:total_kbytes --> KB</td>
        </tr>
        <tr>
          <td><b><font size=-2 color=#000000>Upload Speed:</b></td>
          <td align="right"><font size=-2 color=#000000><font style="font-size:9px; font-color:#000000;"; id="speed">0</font> <font size=-2 color=#000000>KB/s</td>
        </tr>
      </table>
    </div>
    <script language="javascript" type="text/javascript">getProgressData();</script>
    <script language="javascript" type="text/javascript">getElapsedTime();</script>
    </body>
</html>